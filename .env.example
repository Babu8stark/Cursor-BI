# Beauty AI Platform - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef123456
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-ABCDEF1234

# Firebase Admin SDK (Server-side only)
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# ===========================================
# GOOGLE CLOUD CONFIGURATION
# ===========================================
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Google Cloud Vision API
GOOGLE_CLOUD_VISION_API_KEY=your_vision_api_key_here

# Vertex AI Configuration
VERTEX_AI_PROJECT=your-project-id
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL_ENDPOINT=your_model_endpoint_here

# ===========================================
# API ENDPOINTS & SERVICES
# ===========================================
NEXT_PUBLIC_API_BASE_URL=https://your-api-domain.com
NEXT_PUBLIC_WEB_BASE_URL=https://your-web-domain.com
NEXT_PUBLIC_CDN_BASE_URL=https://cdn.your-domain.com

# Cloud Functions URLs
CLOUD_FUNCTIONS_BASE_URL=https://us-central1-your-project-id.cloudfunctions.net
CLOUD_RUN_BASE_URL=https://your-service-hash-uc.a.run.app

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
NEXTAUTH_SECRET=your_nextauth_secret_here_minimum_32_characters
NEXTAUTH_URL=https://your-domain.com

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_for_custom_tokens
JWT_EXPIRATION=7d

# API Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ===========================================
# PAYMENT PROCESSING
# ===========================================
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Subscription Plans
STRIPE_PREMIUM_PRICE_ID=price_premium_plan_id
STRIPE_PRO_PRICE_ID=price_pro_plan_id

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================
# Email Service (SendGrid, Mailgun, etc.)
EMAIL_SERVICE_API_KEY=your_email_service_api_key
EMAIL_FROM_ADDRESS=noreply@beautyai.app
EMAIL_FROM_NAME=Beauty AI Platform

# SMS Service (Twilio, etc.)
SMS_SERVICE_SID=your_sms_service_sid
SMS_SERVICE_AUTH_TOKEN=your_sms_auth_token
SMS_FROM_NUMBER=+1234567890

# Social Media APIs
INSTAGRAM_API_KEY=your_instagram_api_key
TIKTOK_API_KEY=your_tiktok_api_key
YOUTUBE_API_KEY=your_youtube_api_key

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel Analytics
MIXPANEL_PROJECT_TOKEN=your_mixpanel_token

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# PostHog Product Analytics
POSTHOG_PROJECT_API_KEY=your_posthog_api_key
POSTHOG_HOST=https://app.posthog.com

# ===========================================
# STORAGE & CDN
# ===========================================
# Cloud Storage
CLOUD_STORAGE_BUCKET=your-storage-bucket-name
CLOUD_STORAGE_PROJECT_ID=your-project-id

# Image Processing
IMAGE_RESIZE_API_KEY=your_image_api_key
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_QUALITY_COMPRESSION=80

# ===========================================
# AI & MACHINE LEARNING
# ===========================================
# OpenAI API (for additional AI features)
OPENAI_API_KEY=sk-your_openai_api_key

# Custom AI Models
BEAUTY_ANALYSIS_MODEL_URL=https://your-model-endpoint.com
SKIN_CLASSIFICATION_MODEL_ID=your_model_id
RECOMMENDATION_ENGINE_URL=https://your-recommendation-api.com

# ===========================================
# DEVELOPMENT & DEBUGGING
# ===========================================
NODE_ENV=development
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Feature Flags
FEATURE_AR_TRYON=true
FEATURE_SOCIAL_SHARING=true
FEATURE_PREMIUM_FEATURES=true
FEATURE_ANALYTICS_DASHBOARD=true

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
LIGHTHOUSE_CI_TOKEN=your_lighthouse_ci_token

# ===========================================
# MOBILE APP CONFIGURATION
# ===========================================
# Expo Configuration
EXPO_PROJECT_ID=your-expo-project-id
EXPO_ORGANIZATION=your-expo-organization

# Push Notifications
EXPO_PUSH_NOTIFICATION_SERVICE_URL=https://exp.host/--/api/v2/push/send

# App Store Configuration
IOS_BUNDLE_ID=com.beautyai.app
ANDROID_PACKAGE_NAME=com.beautyai.app

# ===========================================
# TESTING & QA
# ===========================================
# Test Database
TEST_DATABASE_URL=your_test_database_url
TEST_FIREBASE_PROJECT_ID=your-test-project-id

# Playwright Configuration
PLAYWRIGHT_BROWSERS_PATH=/path/to/browsers
PLAYWRIGHT_BASE_URL=http://localhost:3000

# Load Testing
LOAD_TEST_BASE_URL=https://staging.beautyai.app
LOAD_TEST_CONCURRENT_USERS=100

# ===========================================
# COMPLIANCE & LEGAL
# ===========================================
# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
COOKIE_CONSENT_ENABLED=true

# Terms and Privacy
TERMS_OF_SERVICE_URL=https://beautyai.app/terms
PRIVACY_POLICY_URL=https://beautyai.app/privacy
COOKIE_POLICY_URL=https://beautyai.app/cookies

# ===========================================
# INFRASTRUCTURE
# ===========================================
# Redis Cache
REDIS_URL=redis://your-redis-instance:6379
REDIS_PASSWORD=your_redis_password

# Database Connection Pool
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# ===========================================
# BUSINESS CONFIGURATION
# ===========================================
# Subscription Limits
FREE_TIER_ANALYSES_PER_MONTH=3
PREMIUM_TIER_ANALYSES_PER_MONTH=50
PRO_TIER_ANALYSES_PER_MONTH=-1

# Business Rules
MAX_FILE_SIZE_MB=10
MAX_VIDEO_SIZE_MB=100
MAX_IMAGES_PER_POST=10
MAX_TUTORIAL_DURATION_MINUTES=60

# Pricing Configuration
FREE_TIER_PRICE=0
PREMIUM_TIER_PRICE=9.99
PRO_TIER_PRICE=29.99
CURRENCY=USD

# ===========================================
# LOCALIZATION & INTERNATIONALIZATION
# ===========================================
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr,de,it,pt,ja,ko,zh
TRANSLATION_API_KEY=your_translation_api_key

# ===========================================
# ADMIN & SUPPORT
# ===========================================
ADMIN_EMAIL=admin@beautyai.app
SUPPORT_EMAIL=support@beautyai.app
ADMIN_PANEL_URL=https://admin.beautyai.app

# Support Ticket System
SUPPORT_SYSTEM_API_KEY=your_support_api_key
SUPPORT_SYSTEM_URL=https://support-api.beautyai.app

# ===========================================
# CUSTOM FEATURES
# ===========================================
# Beauty AI Specific
SKIN_TONE_DETECTION_ACCURACY=95
FACE_LANDMARK_COUNT=468
COLOR_PALETTE_SIZE=12
RECOMMENDATION_ALGORITHM_VERSION=2.1

# Social Features
ENABLE_USER_POSTS=true
ENABLE_BEAUTY_CHALLENGES=true
ENABLE_EXPERT_CONSULTATIONS=true
ENABLE_COMMUNITY_REVIEWS=true

# ===========================================
# NOTES FOR DEVELOPERS
# ===========================================
# 1. Never commit real credentials to version control
# 2. Use different values for development, staging, and production
# 3. Regularly rotate API keys and secrets
# 4. Enable 2FA for all service accounts
# 5. Monitor usage and billing for all services
# 6. Test all integrations in staging before production deployment